<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.admin.apptoast.SpecialTripsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbSpecial_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="8dp"-->
        <!--android:background="@drawable/boarder"-->
        <!--android:hint="Type :"-->
        <!--android:padding="4dp" />-->
        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="8dp"-->
        <!--android:background="@drawable/boarder"-->
        <!--android:hint="Type :"-->
        <!--android:padding="4dp" />-->
        <RelativeLayout

            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/my_toolbar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/compare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/destination_border"
                android:src="@drawable/compare" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toRightOf="@+id/compare"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/destination_border">

                    <fragment
                        android:id="@+id/tvSpecialTripTo"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boarder" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/destination_border">

                    <fragment
                        android:id="@+id/tvSpecialTripFrom"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boarder" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <Spinner
            android:id="@+id/spinnerEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:autofillHints="MM"

            android:background="@drawable/boarder"></Spinner>
        <LinearLayout
            android:layout_margin="8dp"
            android:padding="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnRemove"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tvQuantity"
                android:text="1"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/btnAdd"
                android:background="@color/colorAccent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:text="+"/>
        </LinearLayout>


        <TextView
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boarder"
            android:hint="20 May 2018"
            android:padding="4dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boarder"
            android:hint="30 January 2017"
            android:padding="4dp"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn_viewpriceSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#000"
            android:onClick="dialog"
            android:padding="12dp"
            android:text="View Price"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnBuyNowSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#000"
            android:padding="12dp"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
