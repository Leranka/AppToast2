<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center"
    tools:context="com.example.admin.apptoast.SpecialTripsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/bus_feet"
        android:layout_alignParentTop="true"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">


        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="8dp"-->
        <!--android:background="@drawable/boarder"-->
        <!--android:hint="Type :"-->
        <!--android:padding="4dp" />-->
        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="8dp"-->
        <!--android:background="@drawable/boarder"-->
        <!--android:hint="Type :"-->
        <!--android:padding="4dp" />-->




        <RelativeLayout

            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_toolbar"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/compare"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:src="@drawable/compare" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toRightOf="@+id/compare"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/fragment_special_trip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/destination_border">

                    <!-- <fragment
                         android:id="@+id/tvSpecialTripTo"
                         android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:background="@drawable/boarder" />-->

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fragment_special_to"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:background="@drawable/destination_border">

                    <!--<fragment
                        android:id="@+id/tvSpecialTripFrom"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boarder" />-->
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <Spinner
            android:id="@+id/spinnerEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:autofillHints="MM"

            android:background="@drawable/boarder"></Spinner>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/destination_border"
                android:text="-"

                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/destination_border"
                android:text="+"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/boarder"
            android:hint="20 May 2018"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boarder"
            android:hint="30 January 2017"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@android:color/white"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_viewpriceSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/destination_border"
        android:onClick="dialog"
        android:text="View Price"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="OnClick"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btnBuyNowSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/destination_border"
        android:text="Book Now"
        android:layout_marginBottom="8dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
