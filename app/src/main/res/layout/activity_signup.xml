            <!--android:id="@+id/txt_forgotPW"-->
            <!--android:textColorHint="#2A363B"-->
            <!--android:textSize="16dp"-->
            <!--android:layout_marginTop="5dp"/>-->

    <!--</LinearLayout>-->
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
