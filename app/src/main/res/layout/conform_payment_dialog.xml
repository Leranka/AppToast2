<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_dialog"
        android:id="@+id/relativeLayout2">

        <io.netopen.hotbitmapgg.library.view.RingProgressBar

            android:id="@+id/progress_bar_2"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"
            android:textAlignment="gravity"
            app:max="100"
            app:ringColor="@android:color/darker_gray"
            app:ringProgressColor="@android:color/holo_green_light"
            app:ringWidth="10dp"
            app:style="STROKE"
            app:textColor="@android:color/transparent"
            app:textIsShow="true"
            app:textSize="15dp" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/progress_bar_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:fontFamily="serif-monospace"
            android:text="Booking Requested"
            android:textColor="#ec669900"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/progress_bar_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:fontFamily="serif-monospace"
            android:text="Item Loading..."
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progress_bar_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:fontFamily="serif-monospace"
            android:text="Payment"
            android:textColor="@android:color/holo_green_light"
            android:textSize="34sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/tvDay"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="23dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/check0" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="OK"
        android:textColor="#ffffffff" />

</RelativeLayout>