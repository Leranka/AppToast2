<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bus_00"
    tools:context="com.example.admin.apptoast.PaymentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbPayment"
        android:id="@+id/relativeLayout3"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Invoice"
    android:textAlignment="center"
    android:textSize="16sp"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:layout_marginBottom="10dp"
    android:id="@+id/textView11"
    />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text=" Bus Service: Reavaya"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/jhb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView10"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text=" From: Johannesburg"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/jhb"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text=" To: Germiston"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:text=" Trip: Pay As Yo Go"
            android:layout_marginBottom="5dp"
            />


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/trip"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text=" Total: R245.00"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:id="@+id/relativeLayout4"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Details"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginStart="14dp">


        <EditText
            android:id="@+id/edCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageButton4"
            android:hint=" 0000 0000 0000 0000"
            android:layout_marginRight="12dp"
            android:textColorHint="#50f98903"
            tools:ignore="HardcodedText"
            android:inputType="phone"
            android:maxLength="16"/>

        <TextView
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Card no."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginStart="14dp"
        android:layout_marginTop="45dp"
        android:id="@+id/relativeLayout5">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/textView13"
            android:hint=" 000"
            android:paddingRight="16dp"
            android:textColorHint="#50f98903"
            android:layout_marginRight="12dp"
            tools:ignore="HardcodedText"
            android:inputType="phone"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="CVV no."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/textView13"
           />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Card Expire:"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:id="@+id/textView12" />


        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView12"
            android:layout_weight="1"

            />


        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_alignRight="@+id/spinnerMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCorfom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/destination_border"
            android:layout_weight="1"
            android:text="Pay"
            android:textAllCaps="false"
            android:textColor="@android:color/black"  />


    </RelativeLayout>



</RelativeLayout>
